@{
    ViewData["Title"] = "Auth - ForgotPassword";
}

@model ForgotPasswordViewModel

<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <h2>Find your account</h2>
            <form asp-action="ForgotPassword">

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password" name="password" id="password" type="password" required>
                </div>

                <button class="btn btn-primary solid blank mt-1 mb-3" type="submit">Find your account</button>

            </form>
        </div>
    </div>
</div>