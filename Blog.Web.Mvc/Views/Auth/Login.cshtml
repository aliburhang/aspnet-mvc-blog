@{
    ViewData["Title"] = "Auth - Login";
}

@model LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <h1>Login</h1>
            <form asp-action="Login" method="post">

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" asp-for="EmailAddress" name="email" id="email" type="email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password" name="password" id="password" type="password" required>
                </div>

                <button class="btn btn-primary solid blank mt-1 mb-3" type="submit">Login</button>

            </form>
        </div>
    </div>
</div>
