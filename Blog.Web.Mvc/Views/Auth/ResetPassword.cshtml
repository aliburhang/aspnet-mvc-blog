@{
    ViewData["Title"] = "Auth - Reset Password";
}

@model ForgotPasswordViewModel

<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <h1>Reset Password</h1>
            <form asp-controller="Auth" asp-action="ResetPassword" method="post">

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" asp-for="EmailAddress" id="email" type="email" required placeholder="name@example.com">
                    <span class="text-danger" asp-validation-for="EmailAddress"></span>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password" id="password" type="password" required placeholder="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password repeat</label>
                    <input class="form-control" asp-for="Password2" id="password" type="password" required placeholder="Repeat password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <button class="btn btn-primary solid blank mt-1 mb-3" type="submit">Change Password</button>

            </form>
        </div>
    </div>
</div>
