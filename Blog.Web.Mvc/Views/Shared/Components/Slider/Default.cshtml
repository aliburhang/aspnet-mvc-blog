@model List<Post>


    <section class="slider mt-4">
        <div class="container-fluid">
            <div class="row no-gutters">
                <div class="col-lg-12 col-sm-12 col-md-12 slider-wrap">

                    @foreach (var item in Model)
                    {
                        <div class="slider-item">
                            <div class="slider-item-content">
                                <div class="post-thumb mb-4">
                                    <a href="#">
                                        <img src="/images/slider/slider1.jpg" alt="" class="img-fluid">
                                    </a>
                                </div>
                                <div class="slider-post-content">
                                    <span class="cat-name text-color font-sm font-extra text-uppercase letter-spacing">@item.Title</span>
                                    <h3 class="post-title mt-1"><a href="blog-single.html">@item.Content</a></h3>
                                    <span class=" text-muted  text-capitalize">@item.CreatedAt.ToShortDateString()</span>
                                </div>
                            </div>
                        </div>
                    }





                </div>
            </div>
        </div>
    </section>